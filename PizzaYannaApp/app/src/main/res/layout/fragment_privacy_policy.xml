<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PrivacyPolicyFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/privacyPolicyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/privacyPolicyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp32"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp20"
                android:text="@string/privacyPolicyText" />

            <TextView
                android:id="@+id/privacyPolicyDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars = "vertical"
                android:textSize="@dimen/sp24"
                android:layout_marginTop="@dimen/dp20"
                android:text="@string/privacyPolicyDescription" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>